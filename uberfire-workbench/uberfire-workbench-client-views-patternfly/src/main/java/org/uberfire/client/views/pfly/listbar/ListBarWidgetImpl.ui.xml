<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tb="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:uf="urn:import:org.uberfire.client.workbench.widgets.listbar"
             xmlns:ufm="urn:import:org.uberfire.client.views.pfly.maximize"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">

  <ui:with field="res" type="org.uberfire.client.resources.WorkbenchResources"/>

  <uf:ResizeFocusPanel ui:field="container">
    <b:Panel addStyleNames="uf-listbar-panel">
      <b:PanelHeader ui:field="header" addStyleNames="uf-listbar-panel-header">
        <b:ButtonToolBar addStyleNames="pull-right">
          <b:ButtonGroup ui:field="contextMenu" />
          <b:ButtonGroup>
            <b:DropDown ui:field="toolBarDropDown" addStyleNames="uf-listbar-panel-header-toolbar">
              <b:Anchor ui:field="toolBarDropDownMenuButton" icon="ELLIPSIS_H" iconSize="LARGE" iconMuted="true" dataToggle="DROPDOWN" addStyleNames="btn btn-default btn-sm" />
              <b:DropDownMenu>
                <ufm:MaximizeToggleButton ui:field="maximizeButton" />
                <b:AnchorListItem ui:field="drag" icon="ARROWS" iconSize="LARGE" />
                <b:AnchorListItem ui:field="closeButton" icon="TIMES" iconSize="LARGE" />
              </b:DropDownMenu>
            </b:DropDown>
          </b:ButtonGroup>
        </b:ButtonToolBar>
        <b:DropDown ui:field="titleDropDown" visible="false" pull="LEFT">
          <b:Anchor ui:field="titleAnchor" dataToggle="DROPDOWN"/>
          <b:DropDownMenu ui:field="titleDropdownMenu" />
        </b:DropDown>
        <b:Heading size="H3" visible="false" ui:field="titleHeading" pull="LEFT" />
      </b:PanelHeader>
      <b:PanelBody ui:field="content" />
    </b:Panel>
  </uf:ResizeFocusPanel>

</ui:UiBinder> 