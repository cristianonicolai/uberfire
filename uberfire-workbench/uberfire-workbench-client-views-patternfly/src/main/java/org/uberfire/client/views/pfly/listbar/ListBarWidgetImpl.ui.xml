<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tb="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:uf="urn:import:org.uberfire.client.workbench.widgets.listbar"
             xmlns:ufm="urn:import:org.uberfire.client.views.pfly.maximize"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">

  <ui:with field="res" type="org.uberfire.client.resources.WorkbenchResources"/>

  <ui:style>
    .dropdown {
      background: none;
      border: none;
      box-shadow: none;
      min-width: 20px;
      max-width: 20px;
      text-align: center;
      padding-left: 5px;
    }

    .dropdown li:hover {
      cursor: pointer;
    }
  </ui:style>

  <uf:ResizeFocusPanel ui:field="container">
    <b:Panel>
      <b:PanelHeader ui:field="header">
        <b:DropDown pull="RIGHT" ui:field="dropdown" visible="false">
          <b:Anchor dataToggle="DROPDOWN" icon="ELLIPSIS_H" iconSize="LARGE" addStyleNames="dropdown-toggle"/>
          <b:DropDownMenu addStyleNames="{style.dropdown}">
            <ufm:MaximizeToggleButton ui:field="maximizeButton" />
            <b:ListItem ui:field="drag" ><b:Icon type="ARROWS" size="LARGE"/></b:ListItem>
            <b:ListItem ui:field="closeButton" ><b:Icon type="TIMES" size="LARGE"/></b:ListItem>
          </b:DropDownMenu>
        </b:DropDown>
        <b:Heading size="H3" ui:field="title"/>
      </b:PanelHeader>
      <b:PanelBody ui:field="content" />
    </b:Panel>
